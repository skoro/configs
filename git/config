# git config
#
# Copy this file to your ~/.config/git directory
#

[user]
    email = skorobogatko.oleksii@gmail.com
    name = Alexei Skorobogatko

[alias]
    br = branch
    st = status
    ss = status --short
    sd = diff --stat
    ci = commit
    co = checkout
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit            
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    di = diff

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = auto
    grep = auto
    decorate = auto
    showbranch = auto
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = 227
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
    commit = 227 bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[url "git://github.com/"]
    insteadOf = github:

